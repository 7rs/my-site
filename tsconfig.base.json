{
    "exclude": ["*node_modules*"],
    "compilerOptions": {
        // Dependencies
        "module": "nodenext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowImportingTsExtensions": true,
        // TS Options
        "strictNullChecks": true,
        "allowJs": true,
        "resolveJsonModule": true,
        // Output
        "declaration": true,
        "emitDeclarationOnly": true
    }
}
