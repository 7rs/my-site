{
    "exclude": ["*node_modules*", "./packages/**"],
    "compilerOptions": {
        // Dependencies
        "module": "nodenext",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowImportingTsExtensions": true,
        // TS Options
        "strictNullChecks": true,
        "allowJs": true,
        "resolveJsonModule": true,
        // Output
        "declaration": true,
        "emitDeclarationOnly": true,
        // Path
        "baseUrl": ".",
        "paths": {
            "@layouts/*": ["src/layouts/*"],
            "@components/*": ["src/components/*"],
            "@styles/*": ["src/styles/*"],
            "@assets/*": ["src/assets/*"],
            "@icons/*": ["src/icons/*"],
            "@scripts/*": ["scripts/*"],
            "@lib/*": ["scripts/lib/*"],
            "@static/*": ["static/*"]
        }
    }
}
