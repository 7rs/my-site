---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import Links from "../components/Links.astro";
import Header from "./Header.astro";
---

<!DOCTYPE html>
<html class="font-sans" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />

		<main class="w-11/12 lg:w-9/12 mx-auto my-4 rounded-2xl bg-white"><slot /></main>
	</body>
	<footer class="w-11/12 lg:w-9/12 mx-auto my-4 rounded-2xl bg-white">
		<Links />
		<p>Source code: https://github.com/7rs/my-site</p>
	</footer>
</html>

<style is:global>
	html {
		background: linear-gradient(0deg,
            rgb(66, 165, 245),
            rgb(171, 71, 188),
            rgb(239, 83, 80),
			rgb(171, 71, 188),
			rgb(66, 165, 245));
	}
</style>
