---
import youtube from "@assets/brand-icons/youtube.svg";
import twitter from "@assets/brand-icons/twitter.svg";
import pinterest from "@assets/brand-icons/pinterest.svg";
import telegram from "@assets/brand-icons/telegram.svg";
import discord from "@assets/brand-icons/discord.svg";

export interface Props {
  icons?: string;
}

const { icons = "true" } = Astro.props;
let icons_class = "icons flex-row flex-gap-vertical";
if (icons === "false") {
  icons_class = "hideen-icons";
}
---

<footer>
  <div class="footer-box flex-col flex-gap-horizontal static-box">
    <div class={icons_class}>
      <a
        style=`mask-image: url(${youtube.src}); -webkit-mask-image: url(${youtube.src})`
        class="youtube icon"
        href="https://7rs.dev/yt"
        title="youtube"
        target="_blank"
        rel="noopener noreferrer"></a>
      <a
        style=`mask-image: url(${twitter.src}); -webkit-mask-image: url(${twitter.src})`
        class="twitter icon"
        href="https://7rs.dev/x"
        title="twitter"
        target="_blank"
        rel="noopener noreferrer"></a>
      <a
        style=`mask-image: url(${pinterest.src}); -webkit-mask-image: url(${pinterest.src})`
        class="pinterest icon"
        href="https://7rs.dev/p"
        title="pinterest"
        target="_blank"
        rel="noopener noreferrer"></a>
      <a
        style=`mask-image: url(${telegram.src}); -webkit-mask-image: url(${telegram.src})`
        class="telegram icon"
        href="https://7rs.dev/t"
        title="telegram"
        target="_blank"
        rel="noopener noreferrer"></a>
      <a
        style=`mask-image: url(${discord.src}); -webkit-mask-image: url(${discord.src})`
        class="discord icon"
        href="https://7rs.dev/d"
        title="discord"
        target="_blank"
        rel="noopener noreferrer"></a>
    </div>
    <div class="credits flex-row flex-gap-vertical">
      <a
        class="text mono-font"
        href="https://7rs.dev/repo"
        title="source code"
        target="_blank"
        rel="noopener noreferrer">Source Code</a
      >
      <a
        class="text mono-font"
        href="https://7rs.dev/gh"
        title="github"
        target="_blank"
        rel="noopener noreferrer">Â© 2023 Cbrnex</a
      >
    </div>
  </div>
</footer>

<style lang="stylus">
  static-box = 2rem

  footer
    width 100%

  .hideen-icons
    display none

  div
    &.footer-box
      padding-bottom static-box * 2

    &.icons, .credits
      justify-content center

    &.icons>a
      &.youtube
        &:hover
          background rgb(255, 0, 0)
      &.twitter
        &:hover
          background rgba(0, 0, 0, 0.5)
      &.pinterest
        &:hover
          background rgb(189, 8, 28)
      &.telegram
        &:hover
          background rgb(38, 165, 228)
      &.discord
        &:hover
          background rgb(88, 101, 242)
</style>
