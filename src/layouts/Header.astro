---
import logo from "@assets/logo.svg";
import links from "@assets/icons/links.svg";
import tech from "@assets/icons/tech.svg";

import Icon from "@components/Icon.astro";
import Brand from "@components/Brand.astro";
---

<header>
  <Brand />
  <nav>
    <Icon src={links.src} />
    <Icon src={tech.src} />
  </nav>
</header>

<style lang="stylus">
  @import "../styles/api.styl"

  gap = {
    small: 1rem,
    large: 1.5rem,
  }

  header
    position sticky
    top 0
    display flex
    align-items center
    // For responsive
    max-width 100vw
    height 3rem

    nav
      width 100%
      display flex
      align-items center
      justify-content flex-end
      // For responsive
      gap gap.small
      @media screen and (min-width widths.large)
        gap gap.large
</style>
