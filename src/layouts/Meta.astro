---
import { ViewTransitions } from "astro:transitions";

import { Metadata } from "@lib/meta";

import OpenGraphData from "@components/meta/OpenGraphData.astro";
import TwitterCard from "@components/meta/TwitterCards.astro";
import Fonts from "@components/meta/Fonts.astro";
import Settings from "@components/meta/Settings.astro";
import Data from "@components/meta/Data.astro";

export interface Props {
  title: string;
  metadata: Metadata;
  fonts?: Array<string>;
}

const { title, metadata, fonts = [] } = Astro.props;
---

<head>
  <ViewTransitions />
  <Data
    title={title}
    description={metadata.site.description}
    authorName={metadata.author.name}
    siteName={metadata.site.name}
    url={metadata.site.url}
  />
  <Settings favicon={metadata.site.favicon} noIndex={metadata.noIndex} />
  <Fonts fonts={fonts} />
  <OpenGraphData
    title={title}
    siteName={metadata.site.name}
    image={metadata.site.image}
    keywords={metadata.site.keywords}
  />
  <TwitterCard title={title} twitterId={metadata.twitterId} image={metadata.site.image} alt={metadata.site.alt} />
  <slot />
</head>
