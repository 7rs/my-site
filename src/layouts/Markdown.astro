---
import Layout from "./Layout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main>
    <slot />
  </main>
</Layout>

<style lang="stylus" is:global>
  @import url("https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+New&display=swap");
  @import url('https://fonts.googleapis.com/css2?family=BIZ+UDGothic&display=swap');

  @import url("https://fonts.googleapis.com/css2?family=Fira+Mono&display=swap");
  @import url('https://fonts.googleapis.com/css2?family=Fira+Code&display=swap');

  @import "../styles/responsive"

  .underline
    position relative
    top 0
    left 0
    &:before
      position absolute
      bottom 0
      content ""
      border-bottom 1px solid rgb(128, 128, 128)
      animation 1s underline-progress forwards

  @keyframes underline-progress
    0%
      width 0%
    100%
      width 100%

  main
    font-family "Fira Mono", "Zen Kaku Gothic New", monospace

    h1, h2, h3, h4, h5, h6
      @extend .dark-text

    h1
      text-align center
      font-size 2rem
      @media (min-width wide-screen)
        font-size 3rem

    h2
      @extend .underline

    h2, h3
      font-size 1.75rem
      @media (min-width wide-screen)
        font-size 2rem

    h4
      font-size 1.5rem
      @media (min-width wide-screen)
        font-size 1.75rem
    h5
      margin 0.25rem
      font-size 1.25rem
      @media (min-width wide-screen)
        font-size 1.5rem

    h6
      font-size 1rem

    p
      @extend .dark-text

    blockquote
      background rgba(255, 255, 255, 10%)

    a  // link
      text-decoration none
      color green
      &:hover
        text-decoration underline

    p>code, pre, pre.astro-code, pre.github-dark  // code block
      font-family "Fira Code", "BIZ UDGothic", monospace
      font-size 1rem
      border-radius 0.5rem

    p>code  // single line code block
      background #24292e
      color #E1E4E8
      padding 0.25rem

    pre, pre.astro-code, pre.github-dark  // multi line code block
      padding 0.5rem 1rem

    hr
      margin 3rem 0

    table
      width 100%
      thead>tr>th
        text-align center
</style>
