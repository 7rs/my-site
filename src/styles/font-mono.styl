@font-face
  font-family 'Fira Code'
  font-style normal
  font-display swap
  font-weight 400
  src url(@fontsource/fira-code/files/fira-code-latin-400-normal.woff2) format('woff2')
  unicode-range U+0020-007E

@font-face
  font-family 'Fira Code'
  font-style normal
  font-display swap
  font-weight 700
  src url(@fontsource/fira-code/files/fira-code-latin-700-normal.woff2) format('woff2')
  unicode-range U+0020-007E

:root
  --font-mono 'Fira Code', ui-monospace, monospace
