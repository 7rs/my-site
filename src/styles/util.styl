$icon-button
  background none
  border none

zoom(ms = 100ms, function = ease-out, _scale = 125%)
  &:hover
    transition all ms function
    transform scale(_scale)

hoverable(_scale = 125%, duration = 100ms, timing-function = ease-out)
  &:hover
    zoom(duration, timing-function, _scale)

    &[data-icon="simple-icons:youtube"]
      color #FF0000
    &[data-icon="simple-icons:github"]
      color #181717
    &[data-icon="simple-icons:zenn"]
      color #3EA8FF
    &[data-icon="simple-icons:patreon"]
      color #000000
    &[data-icon="simple-icons:discord"]
      color #5865F2
    &[data-icon="simple-icons:rss"]
      color #FFA500

flex(direction = row, _gap = null, justify-content = null)
  display flex
  flex-direction direction

  if _gap
    if direction is column || direction is column-reverse
      row-gap _gap
    else
      column-gap _gap

  if justify-content
    justify-content justify-content

$neontext-static
  background-clip text
  color transparent
neontext(text-color, shadow-color, shadow-strength = 8px)
  @extend $neontext-static
  background-image text-color
  filter drop-shadow(0 0 shadow-strength shadow-color)

responsive-padding(_width = widths.large, x = 0.5rem, y = null)
  --large-width _width
  --padding-x x

  box-sizing border-box
  width 100%
  padding-left x
  padding-right x
  @media screen and (min-width widths.large)
    padding-left calc((100% - var(--large-width)) / 2 + var(--padding-x))
    padding-right calc((100% - var(--large-width)) / 2 + var(--padding-x))

  if y
    padding-top y
    padding-bottom y
