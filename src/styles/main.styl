@import url('https://fonts.googleapis.com/css2?family=Cinzel+Decorative&family=Fira+Code&display=swap');
@import "dark"
@import "responsive"

.mono-font
  font-family "Fira Code", monospace

.bitching-font
  font-family "Cinzel Decorative", Garamond, "Times New Roman", Georgia, serif

.flex-row 
  display flex
  justify-content space-between
  align-items center

.flex-row-reverse
  @extend .flex-row
  flex-direction row-reverse

.flex-col
  @extend .flex-row
  flex-direction column

.flex-col-reverse
  @extend .flex-row
  flex-direction column-reverse