// dark

light-background = rgba(255, 255, 255, 0.5)
light-item = black
light-hover = red

dark-background = rgba(0, 0, 0, 0.5)
dark-item = white
dark-hover = blue

.dark-background
  background light-background
  @media (prefers-color-scheme dark)
    background dark-background

.dark-item
  background light-item
  @media (prefers-color-scheme dark)
    background dark-item

.dark-text
  color light-item
  @media (prefers-color-scheme dark)
    color dark-item

.dark-item-hover
  @extend .dark-item
  &:hover
    background light-hover
    @media (prefers-color-scheme dark)
      background dark-hover

.dark-text-hover
  @extend .dark-text
  &:hover
    color light-hover
    @media (prefers-color-scheme dark)
      color dark-hover

bg-blur = 1rem
.blur-background
  @extend .dark-background
  backdrop-filter blur(bg-blur)
  -webkit-backdrop-filter blur(bg-blur)



// static

static-flex-gap = 2rem
.static-flex-gap
  gap static-flex-gap

static-box = 2rem
.static-box
  @extend .blur-background
  padding static-box

static-item = 2rem
.static-text
  @extend .dark-text-hover
  text-decoration none
  font-size static-item
.static-icon
  @extend .dark-item-hover
  mask-repeat no-repeat
  -webkit-mask-repeat no-repeat
  mask-size 100%
  -webkit-mask-size 100%
  width static-item
  height static-item



// responsive

mobile-screen = 320px
tablet-screen = 600px
desktop-screen = 1024px

mobile-gap-vertical = 2.25rem
tablet-gap-vertical = 4.5rem
.flex-gap-vertical
  @media (min-width mobile-screen)
    gap mobile-gap-vertical
  @media (min-width tablet-screen)
    gap tablet-gap-vertical

mobile-gap-horizontal = 2rem
tablet-gap-horizontal = 2.5rem
.flex-gap-horizontal
  @media (min-width mobile-screen)
    gap mobile-gap-horizontal
  @media (min-width tablet-screen)
    gap tablet-gap-horizontal

mobile-box-padding = 1.5rem
tablet-box-padding = 1rem
.box
  @extend .static-box
  @media (min-width mobile-screen)
    padding mobile-box-padding
  @media (min-width tablet-screen)
    padding tablet-box-padding

mobile-text = 0.95rem
tablet-text = 1.5rem
.text
  @extend .static-text
  @media (min-width mobile-screen)
    font-size mobile-text
  @media (min-width tablet-screen)
    font-size tablet-text

mobile-icon = 1.5rem
tablet-icon = 2rem
.icon
  @extend .static-icon
  @media (min-width mobile-screen)
    width mobile-icon
    height mobile-icon
  @media (min-width tablet-screen)
    width tablet-icon
    height tablet-icon



// share

.flex-row 
  display flex
  justify-content space-between
  align-items center

.flex-row-reverse
  @extend .flex-row
  flex-direction row-reverse

.flex-col
  @extend .flex-row
  flex-direction column

.flex-col-reverse
  @extend .flex-row
  flex-direction column-reverse

.mono-font
  font-family monospace  // I ain't like: Courier New

.bitching-font
  font-family Garamond, "Times New Roman", Georgia, serif