@import url("https://fonts.googleapis.com/css2?family=Cinzel+Decorative&family=JetBrains+Mono&display=swap")
@import "./responsive"

.flex-row 
  display flex
  justify-content space-between
  align-items center

.flex-row-reverse
  @extend .flex-row
  flex-direction row-reverse

.flex-col
  @extend .flex-row
  flex-direction column

.flex-col-reverse
  @extend .flex-row
  flex-direction column-reverse

.mono-font
  font-family "JetBrains Mono", monospace  // I ain't like: Courier New

.bitching-font
  font-family "Cinzel Decorative", Garamond, "Times New Roman", Georgia, serif