/*
Tailwind CSS (https://tailwindcss.com/docs/responsive-design)
  - 640px
  - 768px
  - 1024px
  - 1280px
  - 1536px

Bulma (https://bulma.io/documentation/overview/responsiveness/)
  - 768px
  - 1024px
  - 1408px

Bootstrap (https://getbootstrap.com/docs/5.3/layout/breakpoints)
  - 576px
  - 768px
  - 992px
  - 1200px
  - 1400px

Widths less than 320px and more than 1200px are not supported.
*/
widths = {  
  small: 300px
  medium: 600px
  large: 900px
  largest: 1200px
}

heights = {
  header: 3rem,
  icon: {
    small: 1.7rem,
    large: 2rem,
  }
}

sizes = {
  icon: 1.75rem,
  brand-size: 1.75rem,
  brand-height: 2rem,
}

background = {
  small: url(.src/assets/wallpapers/20-9_Q1p7bh3SHj8.jpg),
  medium: url(.src/assets/wallpapers/20-9_Q1p7bh3SHj8.jpg),
  large: url(.src/assets/wallpapers/20-9_Q1p7bh3SHj8.jpg),
  largest: url(.src/assets/wallpapers/20-9_Q1p7bh3SHj8.jpg),
  portrait: {
    small: url(.src/assets/wallpapers/20-9_Q1p7bh3SHj8.jpg),
    medium: url(.src/assets/wallpapers/20-9_Q1p7bh3SHj8.jpg),
    large: url(.src/assets/wallpapers/20-9_Q1p7bh3SHj8.jpg),
    largest: url(.src/assets/wallpapers/20-9_Q1p7bh3SHj8.jpg),
  }
}

/*
https://cssgradient.io/
*/
bg-alpha = 0.3
colors = {
  link-colored: rgba(0, 0, 255, 1.0),
  link-hovered-alpha: 0.5,
  // @media (prefers-color-scheme light)
  background: linear-gradient(135deg,
    rgba(240, 255, 255, bg-alpha) 0%,
    rgba(240, 224, 255, bg-alpha) 20%,
    rgba(208, 192, 255, bg-alpha) 40%,
    rgba(240, 176, 240, bg-alpha) 50%,
    rgba(255, 192, 208, bg-alpha) 60%,
    rgba(255, 224, 240, bg-alpha) 80%,
    rgba(255, 255, 240, bg-alpha) 100%
  ),
  widget: rgba(255, 255, 255, 0.7),
  widget-hovered: rgb(0, 0, 0),
  text: rgb(0, 0, 0),
  link: rgb(0, 0, 0),
  icon: rgb(0, 0, 0),
  border: rgba(0, 0, 0, 0.5),
  // @media (prefers-color-scheme dark)
  dark: {
    background: linear-gradient(135deg,
      rgb(16, 0,  8) 0%,
      rgb(24, 0,  16) 25%,
      rgb(32, 8,  32) 50%,
      rgb(16, 8,  24) 75%,
      rgb(8,  0,  16) 100%
    ),
    link-colored: rgba(255, 0, 0, 1.0),
    widget: rgba(0, 0, 0, 0.7),
    widget-hovered: rgb(255, 255, 255),
    text: rgb(255, 255, 255),
    link: rgb(255, 255, 255),
    icon: rgb(255, 255, 255),
    border: rgba(255, 255, 255, 0.5),
  }
}

// https://www.w3schools.com/cssref/css_websafe_fonts.php
sans-alternates = "Trebuchet MS", Verdana, Arial, sans-serif
serif-alternates = "Times New Roman", "Georgia", "Garamond", serif
mono-alternates = "Courier New", monospace

// https://fonts.google.com/?preview.size=24&subset=latin
fonts = {
  sans: "Fira Sans",
  mono: "Fira Code",
  deco: "Cinzel Decorative",
}

// https://fonts.google.com/?preview.size=24&subset=japanese
cjkfonts = {
  sans: "BIZ UDGothic",
  mono: "BIZ UDGothic",
}

bg-color = rgba(248, 248, 255, 1.0)
section-color = rgba(255, 255, 255, 0.7)

brand-height = 2rem
item-height = 1.7rem

sans(size, height)
  font size/height fonts.sans, cjkfonts.sans, sans-alternates

serif(size, height)
  font size/height cjkfonts.serif, serif-alternates

deco(size, height)
  font size/height fonts.deco, serif-alternates

mono(size, height)
  font size/height fonts.mono, cjkfonts.mono, mono-alternates

background-blur(strength)
  backdrop-filter blur(strength)
  -webkit-backdrop-filter blur(strength)

hoverable(_color)
  color _color
  text-decoration none
  &:hover
    color rgba(_color, colors.link-hovered-alpha)
    text-decoration underline
