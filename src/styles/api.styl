@import "api/color.styl"
@import "api/size.styl"
@import "api/font.styl"
@import "api/animate.styl"

$icon-button
  background none
  border none

scrollbar(_width = 3px, axis = "x")
  &::-webkit-scrollbar
    if axis == "x"
      width _width
    else
      height _width
    background white
    @media (prefers-color-scheme dark)
      background black

  &::-webkit-scrollbar-thumb
    background rgba(black, 0.5)
    @media (prefers-color-scheme dark)
      background rgba(white, 0.5)
