@import "api.styl"

@keyframes under
  0%
    width 0%
  100%
    width 100%

$underline
  position relative
  &::before
    z-index -1
    set-absolute()
    /* duration | timing-function | delay | iteration-count | direction | fill-mode | play-state | name */
    animation 1s ease-out 0s 1 normal forwards running under
    border-bottom 1px solid var(--border)

body.markdown
  main
    color var(--content)
    sans(1rem)
    @media screen and (min-width widths.medium)
      sans(1.125rem)

    a, * > a
      color var(--link)
      text-decoration none
      &:hover
        text-decoration underline

    p
      margin 1rem 0

    h1
      margin-top 4rem
      margin-bottom 3rem

    h2
      @extend $underline
      padding 0 0.5rem
      margin-top 3rem
      margin-bottom 0.75rem
      sans(1.5rem)

    h3, h4, h5, h6, summary
      margin-top 0.5rem
      margin-bottom 0.5rem

    h3, summary
      margin-top 1.5rem
      font-weight 700
      sans(1.25rem)

    h4
      sans(1.125rem)

    h5
      sans(1.0625rem)

    h6
      sans(1rem)

    ul, ol, dl
      margin 1.5rem 0

    ul, ol, dl
      list-style-position inside

      padding-left 0.5rem
      ul, ol
        padding-left 1rem

      &.contains-task-list
        list-style none

    pre, code
      mono(1rem)
      @media screen and (min-width widths.medium)
        mono(1.125rem)

    :not(pre) > code
      background var(--content)
      color var(--content-reversed)
      padding 0 0.25rem
      border-radius 0.5rem

    pre
      padding 1rem
      border-radius 0.5rem
      margin 1rem 0

    blockquote
      border-left solid 2px var(--border)
      font-style italic
      padding-left 0.5rem
      margin 1rem 0

    details
      margin 1rem 0
      summary
        sans(1.25rem)

    table
      margin 1rem 0
      padding 0.5rem

      th, td
        color black
        padding 0.5rem
        border-right solid 1px var(--border)
        border-bottom solid 1px var(--border)
        &:last-child
          border-right none

        &:nth-child(7n + 1)
          background-color rgb(255, 224, 224)
        &:nth-child(7n + 2)
          background-color rgb(255, 240, 224)
        &:nth-child(7n + 3)
          background-color rgb(255, 255, 224)
        &:nth-child(7n + 4)
          background-color rgb(224, 255, 224)
        &:nth-child(7n + 5)
          background-color rgb(224, 224, 255)
        &:nth-child(7n + 6)
          background-color rgb(224, 240, 255)
        &:nth-child(7n + 7)
          background-color rgb(255, 224, 255)

      tr:last-child > td
          border-bottom none
