/* Fuckin' billion waste properties have to be specified for markdown styling. */
@import "./main.styl"

border = solid 1px colors.border
table-border = solid 1px rgba(128, 128, 128, 0.1)
brockquote-border = solid 3px rgba(128, 128, 255, 0.3)

@import "../styles/api.styl"

a, p, h1, h2, h3, h4, h5, h6, li
  color colors.text
  @media (prefers-color-scheme dark)
    color colors.dark.text

main
  a
    hoverable(blue)
    font-weight 700

  // Italic
  em, blockquote > p, blockquote > ul > li
    font-style italic

  // Strikethrough
  del
    text-decoration line-through
    text-decoration-thickness 2px

  // Underline
  u
    text-decoration underline

  strong, h1, h2, h3, h4, h5, h6, thead
    font-weight 700

  h1, h2
    position relative
    &::after
      position absolute
      bottom 0
      left 0
      content ""
      animation 1s linear 0s 1 alternate forwards header-transition
      border-bottom border
      @media (prefers-color-scheme dark)
        border-bottom-color colors.dark.border

  hr
    animation 1s linear 0s 1 alternate forwards header-transition

  @keyframes header-transition
    from
      width 20%
      opacity 0
    to
      width 100%
      opacity 1

  h1
    text-align center

  h2, h1
    margin 3rem auto 1rem
    sans(1.2rem, 2rem)
    @media screen and (min-width widths.medium)
      sans(2rem, 2.25rem)

  h3
    margin 2rem auto 1rem

  h4
    margin 1.5rem auto 1rem

  h5, h6
    margin 1rem auto


  ul, ol
    list-style inside

  ul
    list-style-type disc

  ol
    list-style-type decimal

  li
    ul, ol
      padding-left 1.25rem

  table
    width 100%
    background #fff
    border-spacing 0
    table-layout fixed

  th, td
    margin 0
    padding 0 0.5rem
    border table-border

  th
    background rgba(128, 128, 128, 0.1)

  code
    mono(14px, 1rem)
    background #282A36
    color #F8F8F2
    border-radius 3px
    padding 0.1rem 4px

  pre
    padding 0.75rem
    border-radius 3px
    margin 1rem 0
    code
      padding 0

  blockquote
    margin 1rem 0
    padding-left 0.75rem
    border-left brockquote-border

  blockquote > blockquote
    margin-left 1rem

  hr
    margin 3rem auto


/* I fuckin' hate this. */
article
  margin 1rem auto
  bottom 0
  display grid
  grid-template-areas \
      "brand  " \
      "desc   " \
      "socials" \
      "info   ";
  gap 1rem
  align-items center

  @media screen and (min-width widths.medium)
    gap 0.5rem
    grid-template-rows 1fr 0.5fr 2fr 1fr
    grid-template-columns auto 10rem
    grid-template-areas \
      "brand   pages-label" \
      "desc    pages      " \
      "socials pages      " \
      "info    pages      ";

  @media screen and (min-width widths.large)
    width 900px
    grid-template-rows 1.5fr 1fr 3fr 2fr
    grid-template-columns 2fr repeat(2, 1fr)
    grid-template-areas \
      "brand   pages-label res-label" \
      "desc    pages       res      " \
      "socials pages       res      " \
      "info    pages       res      ";
    gap 0.5rem 1rem

  .pages-brand
    grid-area brand
    margin auto 0

  .description
    grid-area desc
    sans(1rem, 1.5rem)

  .socials
    width 15rem
    grid-area socials
    display grid
    gap 1rem
    grid-template-columns repeat(5, 1fr)
    justify-self center
    @media screen and (min-width widths.medium)
      grid-template-columns repeat(6, 1fr)
      justify-self start

  .informations
    grid-area info
    text-align center
    @media screen and (min-width widths.medium)
      text-align start

  h2
    sans(1.5rem, 2rem)
    margin 0.5rem 0

  div > a
    sans(1.2rem, 1.5rem)
    hoverable(black)

  .pages-label, .pages, .resources-label, .resources
    display none

  .pages, .resources
    align-self start
    flex-direction column
    gap 0.7rem

  @media screen and (min-width widths.medium)
    .pages
      display flex
    .pages-label
      display block
    @media screen and (max-width widths.large - 1)
      .pages, .pages-label
        width 7rem
        justify-self end

  @media screen and (min-width widths.large)
    .resources
      display flex
    .resources-label
      display block

  .pages-label
    grid-area pages-label
  .pages
    grid-area pages
  .resources-label
    grid-area res-label
  .resources
    grid-area res
