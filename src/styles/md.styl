@import './main.styl'

border = solid 1px colors.border
table-border = solid 1px rgba(128, 128, 128, 0.1)
brockquote-border = solid 3px rgba(128, 128, 255, 0.3)

main
  box-sizing border-box
  border-radius 1rem
  // For responsive
  padding 1rem
  @media screen and (min-width widths.medium)
    padding 1rem
  @media screen and (min-width widths.large)
    padding 1.5rem
  @media screen and (min-width widths.largest)
    padding 3rem
  // For darkmode
  // background colors.background
  // @media (prefers-color-scheme dark)
  //   background colors.dark.background

  a
    font-weight 700

  img
    margin auto
    width 100%
    height auto

  // Italic
  em, blockquote > p, blockquote > ul > li
    font-style italic

  // Strikethrough
  del
    text-decoration line-through
    text-decoration-thickness 2px

  // Underline
  u
    text-decoration underline

  strong, h1, h2, h3, h4, h5, h6, thead
    font-weight 700

  h1, h2
    position relative
    &::after
      position absolute
      bottom 0
      left 0
      content ''
      animation 1s linear 0s 1 alternate forwards header-transition
      border-bottom border
      @media (prefers-color-scheme: dark)
        border-bottom-color colors.dark.border

  hr
    animation 1s linear 0s 1 alternate forwards header-transition

  @keyframes header-transition
    from
      width 20%
      opacity 0
    to
      width 100%
      opacity 1

  h1
    text-align center

  h2, h1
    margin 3rem auto 1rem
    sans(1.2rem, 2rem)
    @media screen and (min-width: widths.medium)
      sans(2rem, 2.25rem)

  h3
    margin 2rem auto 1rem

  h4
    margin 1.5rem auto 1rem

  h5, h6
    margin 1rem auto


  ul > ul, ol > ol, ul > ol, ol > ul
    list-style inside

  ul
    list-style-type disc

  ol
    list-style-type decimal

  li
    ul, ol
      padding-left 1.25rem

  table
    width 100%
    background #fff
    border-spacing 0
    table-layout fixed

  th, td
    margin 0
    padding 0 0.5rem
    border table-border

  th
    background rgba(128, 128, 128, 0.1)

  code
    mono(14px, 1rem)
    background #282A36
    color #F8F8F2
    border-radius 3px
    padding 0.1rem 4px

  pre
    width 100%
    box-sizing border-box
    padding 0.75rem
    border-radius 3px
    margin 1rem 0
    code
      padding 0

  blockquote
    margin 1rem 0
    padding-left 0.75rem
    border-left brockquote-border

  blockquote > blockquote
    margin-left 1rem

  hr
    margin 3rem auto
