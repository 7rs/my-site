<style lang="stylus">
  @import "../../../styles/api.styl"

  [profile-list]
    width 100%
    display grid
    gap 1rem
    grid-template-rows 1fr
    grid-template-columns 1fr
    @media screen and (min-width widths.large)
      grid-template-columns repeat(3, 1fr)
</style>
