---
import Link from "@components/Link.astro";

export interface Props {
  href: string;
  title?: string;
}

const { href, title, ...props } = Astro.props;
---

<Link href={href} title={title} {...props} openInNewTab>
  <slot />
</Link>

<style lang="stylus">
  @import "../../../styles/api.styl"

  [data-link]
    z-index 0
    position relative
    box-sizing border-box
    padding 0.5rem
    height 100%
    width 100%

    border 1px solid var(--border);
    color var(--content)
    text-align center
    sans(0.75rem)
    @media screen and (min-width widths.largest)
      sans(1rem)

    &, &::before
      border-radius 8px

    &::before
      z-index -1
      set-absolute()
      background var(--content)
      width 0%

    &:hover
      color var(--content-reversed)
      border-color var(--link)
      border none

      &, &::before
        transition all 100ms ease-out

      &::before
        width 100%
</style>
