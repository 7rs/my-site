---
export interface Props {
  title: string;
  description?: string;
  authorName?: string;
  siteName?: string;
  url?: string;
  image?: string;
  classification?: string[];
  category?: string;
}

import packageData from "package.json";

const {
  title,
  description,
  authorName,
  siteName,
  url,
  image,
  classification = ["development", "entertainment", "gaming"],
  category,
} = Astro.props;
---

<title>{title}</title>
<link rel="sitemap" href="/sitemap-0.xml" />
<meta name="generator" content={`Astro v${packageData["dependencies"]["astro"].slice(1)}`} />
<!-- Optional -->
{description && <meta name="description" content={description} />}
{authorName && <meta name="author" content={authorName} />}
{url && <link rel="canonical" href={url} />}
{siteName && <meta name="apple-mobile-web-app-title" content={siteName} />}
{image && <meta name="thumbnail" content={image} />}
{classification.length > 0 && <meta name="classification" content={classification.join(",")} />}
{category && <meta name="category" content={category} />}
