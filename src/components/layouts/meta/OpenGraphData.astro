---
// https://ogp.me/
// https://developers.google.com/search/docs/appearance/structured-data/intro-structured-data

export interface Props {
  title: string;
  siteName?: string;
  image?: string;
  keywords?: Array<string>;
}

const { title, siteName, image, keywords } = Astro.props;
---

<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
{siteName ? <meta property="og:site_name" content={siteName} /> : <meta property="og:site_name" content={title} />}
{image && <meta property="og:image" content={image} />}
{keywords && <meta property="og:keywords" content={keywords?.join(", ")} />}

