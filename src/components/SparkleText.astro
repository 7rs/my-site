---
export interface Props {
  title: string;
}

const { title, ...props } = Astro.props;
---

<hgroup data-sparkle-text {...props}>
  <h2 {...props}>{title}</h2>
  <p {...props}><slot /></p>
</hgroup>

<style lang="stylus">
  @import "../styles/api.styl"
  [data-sparkle-text]
    flex(column)
    justify-content center

    height 100%
    animation \
      10s linear 0s infinite normal forwards running float,
      30s linear 0s infinite normal forwards running rainbow-shadow;
    filter drop-shadow(0 0 8px red)

    h2, p
      font-weight 700
      text-align center
      background-clip text
      color transparent
      background-image linear-gradient(180deg, rgba(160,160,255,1) 0%, rgba(240,240,255,1) 100%);

    h2
      sans(3rem, 3.5rem)
      @media screen and (min-width widths.medium)
        sans(3.5rem, 4rem)
      @media screen and (min-width widths.large)
        sans(4rem, 4.5rem)

    p
      sans(1.25rem, 1.5rem)
      @media screen and (min-width widths.medium)
        sans(1.5rem, 1.75rem)
      @media screen and (min-width widths.large)
        sans(1.75rem, 2rem)
</style>
