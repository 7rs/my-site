---
export interface Props {
  label: string;
}

const { label, ...props } = Astro.props;
---

<li data-timeline-item {...props}>
  <h4>{label}</h4>
  <p><slot /></p>
</li>

<style lang="stylus">
  @import "../styles/api.styl"

  li
    h4
      position relative
      sans(1.75rem, 3rem)
      text-shadow 0 0 8px white

      &::before
        position absolute
        content ""
        top 50%
        right calc(100% - var(--point-size) / 2 + var(--timeline-width) / 2)
        translate 0 -50%
        width var(--point-size)
        height var(--point-size)
        background gray
        border-radius 100%
    p
      @extend $widget-glassmorphism
      sans(1.25rem)
      padding 1rem

      a
        color var(--link)
        &:hover
          text-decoration underline
</style>
