---
import "@styles/pagefind.styl"

import Search from "astro-pagefind/components/Search";

export const prerender = false;
const q = Astro.url.searchParams.get("q") ?? undefined;
---

<Search
  id="search"
  query={q}
  className="pagefind"
  uiOptions={{
    showImages: false,
    translations: { placeholder: "Powered by Pagefind", zero_results: "Couldn't find [SEARCH_TERM]", clear_search: "" },
    showSubResults: true,
  }}
/>
