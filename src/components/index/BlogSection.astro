---
import Ring from "@components/Ring.astro";
import SparkleText from "@components/SparkleText.astro";
import LinkButtons from "@components/LinkButtons.astro";
import LinkButton from "@components/LinkButton.astro";
import Card from "@components/Card.astro";
---

<section data-blog-section>
  <Ring
    icons={[
      "mdi:theme-light-dark",
      "material-symbols:share",
      "mdi:comments-outline",
      "mdi:language",
      "material-symbols:search",
    ]}
  >
    <SparkleText title="Pages Blog">Focus on Reading</SparkleText>
  </Ring>

  <LinkButtons>
    <LinkButton href="/blog">Search</LinkButton>
    <LinkButton href="/what-is-pages-blog">About</LinkButton>
  </LinkButtons>

  <div data-card-list>
    <Card icon="mdi:ads-off" label="No ads">No advertisings and No promotions. All for your focus.</Card>
    <Card icon="mdi:money-off" label="No payments">
      No paid contents and No donations. Pages blog is completely free!
    </Card>
    <Card icon="cib:creative-commons-zero" label="No copyright">Cannot be yours, but Pages is for everyone.</Card>
  </div>
</section>

<style lang="stylus">
  @import "../../styles/api.styl"

  [data-link-buttons]
    margin 3rem 0

  [data-ring]
    height 7.5rem
    margin 7.5rem auto
    @media screen and (min-width widths.medium)
      height 12.5rem
      margin 12.5rem auto
    @media screen and (min-width widths.large)
      height 15rem
      margin 15rem auto

  [data-sparkle-text]
    p, h2
      background-image linear-gradient(180deg,
        rgb(255, 160, 208) 0%,
        rgb(255, 255, 255) 50%,
        rgb(208, 160, 255) 100%);

    h2
      sans(2.25rem)
      @media screen and (min-width widths.medium)
        sans(3.5rem)
      @media screen and (min-width widths.large)
        sans(4.25rem)

    p
      sans(1.25rem)
      @media screen and (min-width widths.medium)
        sans(2rem)
      @media screen and (min-width widths.large)
        sans(2.25rem)

  [data-card-list]
    display grid
    overflow scroll
    grid-template-columns 1fr
    grid-auto-rows 1fr
    row-gap 0.5rem
    @media screen and (min-width widths.large)
      column-gap 1rem
      grid-template-columns repeat(3, 1fr)
</style>
