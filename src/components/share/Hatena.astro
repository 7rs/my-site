---
import LinkIcon from "@components/colorless/LinkIcon.astro";

export interface Props {
  url: string;
  icon?: string;
}
const { url, icon = "simple-icons:hatenabookmark", ...props } = Astro.props;
---

<LinkIcon icon={icon} href={`https://b.hatena.ne.jp/entry/${encodeURIComponent(url)}`} {...props} openInNewTab />

<style lang="stylus">
  @import "../../styles/api.styl"

  [data-link-icon]
    zoom()

  [data-icon]:hover
    color #00A4DE
</style>
