---
/*
  https://developer.twitter.com/docs/tweets/optimize-with-cards/guides/getting-started
  https://developer.twitter.com/en/docs/twitter-for-websites/cards/overview/summary-card-with-large-image
*/

import { PageImage } from "@lib/metagg";

export interface Props {
  title: string;
  twitterId?: string;
  image?: PageImage;
}

const { title, twitterId, image } = Astro.props;
---



<meta property="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
{twitterId && <meta property="twitter:site" content={twitterId} />}
{
  image && (
    <>
      <meta name="twitter:image" content={image.src} />
      <meta name="twitter:image:alt" content={image.alt} />
    </>
  )
}
