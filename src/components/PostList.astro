---
// import { getPostMap } from "@lib/blog";
import Post from "@components/Post.svelte";
import {getPostMap} from "@lib/blog";

const postMap = await getPostMap();
---

<section>
  {
    Array.from(postMap).map(([postId, data]) => (
      <Post titles={data.titles} locales={data.locales} publishedAt={data.publishedAt} client:load />
    ))
  }
</section>

<style lang="stylus">
  @import "../styles/api.styl"

  section
    display flex
    flex-direction column
    gap 1rem
    // height 15rem
    // overflow scroll
</style>
