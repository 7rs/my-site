---
import type { HTMLAttributes } from 'astro/types';


interface Props extends HTMLAttributes<"a">  {
  href?: string;
  title?: string;
  openAsNew?: boolean;
  hreflang?: string;
  className?: string;
}

const { href, title, openAsNew = false, hreflang, className = "", ...props } = Astro.props;
---

{
  href ? (
    <a
      class:list={["text-inherit", className]}
      href={href}
      title={title}
      target={openAsNew ? "_blank" : "_self"}
      rel="noopener noreferrer"
      referrerpolicy="no-referrer"
      hreflang={hreflang}
      {...props}
    >
      <slot />
    </a>
  ) : (
    <slot />
  )
}
