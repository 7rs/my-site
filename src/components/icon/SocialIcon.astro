---
import { Icon } from "astro-icon/components";

import Link from "@components/Link.astro"
import { createSocialLink } from "@lib/social.ts";

export interface Props {
  service: string;
  identify: string;
}
const { service, identify, ...props } = Astro.props;

const social = createSocialLink(service);
---

<Link href={social && `https://${social?.url}/${identify}`} title={service} {...props} openInNewTab social-icon>
  <Icon name={social?.icon} title={service} {...props} social-icon />
</Link>

