---
import { Icon } from "astro-icon/components";

import Link from "@components/Link.astro"

export interface Props {
  icon: string;
  href: string;
  title?: string;
  openInNewTab?: boolean;
}
const { icon, href, title, openInNewTab = false, ...props } = Astro.props;
---

<Link href={href} title={title} openInNewTab={openInNewTab} {...props}>
  <Icon name={icon} {...props} />
</Link>
