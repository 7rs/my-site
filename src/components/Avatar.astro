---
export interface Props {
    src: string;
}

const { src } = Astro.props;
---

<img src={src} alt="https://unsplash.com/photos/7bynNtRqu4E" />

<style>
    img {
        margin: auto;
        animation: 1s normal linear 0s 1 forwards zoom-in,
            1s normal linear 0s 1 forwards round;
    }
    @keyframes zoom-in {
        0% {
            width: 0%;
        }
        100% {
            width: 100%;
        }
    }
    @keyframes round {
        0% {
            border-radius: 0%;
        }
        100% {
            border-radius: 100%;
        }
    }
</style>
