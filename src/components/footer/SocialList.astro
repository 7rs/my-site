---
export interface Props {
  name?: string;
}
const { name = "", ...props } = Astro.props;
---

<article {...props} social-icons={name}><slot /></article>

<style lang="stylus">
  @import "../../styles/api.styl"
  
  article
    background rgba(0, 0, 0, 0.0)
    display grid
    align-content start
    gap 1rem 2rem
    // For responsive
    grid-template-columns repeat(5, sizes.icon)
    justify-content center
    @media screen and (min-width widths.medium)
      justify-content start
</style>
