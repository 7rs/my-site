---
import { Icon } from "astro-icon/components";

import Link from "@components/Link.astro"
import { createSocialLink } from "@lib/social.ts";

export interface Props {
  service: string;
  identify: string;
}
const { service, identify, ...props } = Astro.props;

const social = createSocialLink(service);
---

<Link href={social && `https://${social?.url}/${identify}`} {...props} openInNewTab>
  <Icon name={social?.icon} {...props} />
</Link>

