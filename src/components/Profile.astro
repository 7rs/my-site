---
import type { ImageMetadata } from "astro";
import { Icon } from "astro-icon/components";

import Link from "@components/Link.astro";

export interface Props {
  icon: string | ImageMetadata;
  alt?: string;
  name: string;
  href?: string;
  title?: string;
  lang?: string;
  openInNewTab?: boolean;
}

const { icon, alt, name, href, title, lang, openInNewTab, ...props } = Astro.props;
---

<Link href={href} title={title} lang={lang} openInNewTab={openInNewTab} {...props}>
  <article profile-card>
    {typeof icon === "string" ? <Icon name={icon} /> : <img src={icon.src} />}
    <h2>{name}</h2>
    <p><slot /></p>
  </article>
</Link>

<style lang="stylus">
  @import "../styles/api.styl"

  article[profile-card]
    box-sizing border-box
    height 100%
    width 100%
    glassmorphism(hovered: true)
    // Grid layout
    display grid
    grid-template-columns 1fr 4fr
    grid-template-rows repeat(2, 1fr)
    align-items center
    // Responsive
    grid-template-areas \
      "avatar name" \
      "avatar description";
    gap 0 1rem
    @media screen and (min-width widths.large)
      grid-template-columns 1fr
      grid-template-rows 2fr 0.5fr 0.2fr
      grid-template-areas \
        "avatar" \
        "name" \
        "description";
      gap 0.5rem 0

    // Profile image or logo
    svg[data-icon]
      grid-area avatar
      font-size 100%
      line-height 100%
      height 100%
      width 100%

    p, h2
      @media screen and (min-width widths.large)
        text-align center

    // Name
    h2
      grid-area name
      sans(2.5rem, 3rem)

    // Description
    p
      grid-name description
      sans(1.25rem, 1.5rem)
</style>
