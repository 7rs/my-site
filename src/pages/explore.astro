---
import MainLayout from "@layouts/MainLayout.astro";

import MainSection from "@components/explore/MainSection.astro";
import FastSection from "@components/explore/FastSection.astro";

import light from "@assets/background/PGdW_bHDbpI.jpg";
import dark from "@assets/background/ZkzobNDayXo.jpg";
---

<MainLayout backgrounds={{ light: light, dark: dark }}>

  <MainSection />
  <FastSection />
</MainLayout>

<style lang="stylus">
  @import "../styles/api.styl"

  [data-main-layout]
    flex(column, 5rem)

  [data-icon]
    set-font(size: 3rem)

  *
    set-font("sans")

  h1
    set-font("sans", 3rem, "auto")

  h2
    set-font("sans", 2.5rem, "auto")

  h3
    set-font("sans", 2rem, "auto")

  p
    set-font("sans", 1.5rem, "auto")
</style>
