---
import MainLayout from "@layouts/MainLayout.astro";

import PostList from "@components/blog/PostList.astro";
import Searchbar from "@components/pagefind/Searchbar.svelte";

import light from "@assets/background/E8Ufcyxz514.jpg";
import dark from "@assets/background/ZkzobNDayXo.jpg";

const dir = import.meta.env.DEV ? "dist/" : "";
---

<MainLayout published={true} title="Pages - Search" backgrounds={{ light: light, dark: dark }}>
  <Searchbar pagefindPath={`/${dir}pagefind/pagefind.js`} client:only="svelte" />
  <PostList />
</MainLayout>

<style lang="stylus">
  main
    margin 1.5rem 0
</style>
